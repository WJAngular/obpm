		<!-- 根据名字查询词条 -->
		<action name="findEntryByName"
			class="cn.myapps.km.baike.entry.action.EntryAction" method="doFindEntryByName">
			<result name="findEntryByName" type="dispatcher">
			</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="chain" />
		</action>
		
