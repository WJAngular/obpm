<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<!-- department package -->
	<package name="special" extends="myapps-default"
		namespace="/core/calendar/special">
				
		<action name="delete"
			class="cn.myapps.core.workcalendar.special.action.SpecialAction"
			method="doDelete">
			<result name="success" type="chain">list</result>
			<result name="input" type="chain">list</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="prepare" />
		</action>
	
		<action name="save"
			class="cn.myapps.core.workcalendar.special.action.SpecialAction"
			method="doSave">
			<result name="input" type="dispatcher">content.jsp</result>
			<result name="success" type="dispatcher">content.jsp</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="prepare" />
		</action>
		
		<action name="list"
			class="cn.myapps.core.workcalendar.special.action.SpecialAction"
			method="doList">
			<interceptor-ref name="chain" />
			<result name="success" type="dispatcher">
				list.jsp
			</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="prepare" />
		</action>
		
		<action name="new"
			class="cn.myapps.core.workcalendar.special.action.SpecialAction"
			method="doNew">
			<result name="success" type="dispatcher">
				content.jsp
			</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="prepare" />
		</action>
		
		<action name="edit"
			class="cn.myapps.core.workcalendar.special.action.SpecialAction"
			method="doEdit">
			<result name="success" type="dispatcher">
				content.jsp
			</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="prepare" />
		</action>
			
	</package>
</struts>