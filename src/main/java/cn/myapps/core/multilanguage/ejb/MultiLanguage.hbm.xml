<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="cn.myapps.core.multilanguage.ejb.MultiLanguage"
        table="T_MULTILANGUAGE"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.String"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-MultiLanguage.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="text"
            type="java.lang.String"
            update="true"
            insert="true"
            column="TEXT"
        />

        <property
            name="type"
            type="int"
            update="true"
            insert="true"
            column="TYPE"
        />

        <property
            name="label"
            type="java.lang.String"
            update="true"
            insert="true"
            column="LABEL"
        />

        <property
            name="sortId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="SORTID"
        />

        <property
            name="applicationid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="APPLICATIONID"
        />
		
		<property
            name="domainid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="DOMAINID"
        />
		
        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MultiLanguage.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
