<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="webwork-default.xml" />
	<package name="summaryCfg" extends="myapps-default"
		namespace="/core/dynaform/summary">
		
		<action name="list"
			class="cn.myapps.core.dynaform.summary.action.SummaryCfgAction"
			method="doHomepageList">
			<result name="success" type="dispatcher">
				list.jsp
			</result>
			<result name="input" type="dispatcher">
				list.jsp
			</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="chain" />
		</action>
		<action name="summaryList"
			class="cn.myapps.core.dynaform.summary.action.SummaryCfgAction"
			method="doList">
			<result name="success" type="dispatcher">
				summaryList.jsp
			</result>
			<result name="input" type="dispatcher">
				summaryList.jsp
			</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="chain" />
		</action>
		<action name="save"
			class="cn.myapps.core.dynaform.summary.action.SummaryCfgAction"
			method="doSave">
			<result name="success" type="dispatcher">content.jsp</result>
			<result name="input" type="dispatcher">content.jsp</result>
		</action>
		
		<action name="new"
			class="cn.myapps.core.dynaform.summary.action.SummaryCfgAction"
			method="doNew">
			<result name="success" type="dispatcher">content.jsp</result>
			<interceptor-ref name="params" />
		</action>
		<action name="delete"
			class="cn.myapps.core.dynaform.summary.action.SummaryCfgAction"
			method="doDelete">
			<result name="success" type="chain">summaryList</result>
			<result name="input" type="chain">summaryList</result>
		</action>
		<action name="edit"
			class="cn.myapps.core.dynaform.summary.action.SummaryCfgAction"
			method="doEdit">
			<result name="success" type="dispatcher">content.jsp</result>
			<interceptor-ref name="params" />
		</action>
	</package>
</struts>
