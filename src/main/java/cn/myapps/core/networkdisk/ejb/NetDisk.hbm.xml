<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="cn.myapps.core.networkdisk.ejb.NetDisk"
        table="T_NETDISK"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.String"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-RemoteServerVO.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>
        

        <property
            name="totalSize"
            type="long"
            update="true"
            insert="true"
            column="TOTALSIZE"
        />

        
        <property
            name="uploadSize"
            type="long"
            update="true"
            insert="true"
            column="UPLOADSIZE"
        />
        
        <property
            name="haveUseSize"
            type="long"
            update="true"
            insert="true"
            column="HAVEUSESIZE"
       />
       
       <property
            name="pemission"
            type="java.lang.String"
            update="true"
            insert="true"
            column="PEMISSION"
       />
       
    </class>

</hibernate-mapping>
