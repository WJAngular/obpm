<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
	>
	<class name="cn.myapps.core.homepage.ejb.HomePage" table="T_HOMEPAGE" dynamic-update="true" dynamic-insert="true">
		<id name="id" column="ID" type="java.lang.String">
			<generator class="assigned" />
			<!--  
				To add non XDoclet generator parameters, create a file named 
				hibernate-generator-params-HomePage.xml 
				containing the additional parameters and place it in your merge dir. 
			--> 
		</id>

		<property
			name="name"
			type="java.lang.String"
			update="true"
			insert="true"
			column="NAME"
		/>
		<property 
			name="layoutType"
			type="java.lang.String"
			update="true"
			insert="true"
			column="LAYOUTTYPE"
		/>
        
		<property
			name="description"
			type="java.lang.String"
			update="true"
			insert="true"
			column="DESCRIPTION"
		/>
        
		<property
			name="published"
			type="boolean"
			update="true"
			insert="true"
			column="PUBLISHED"
		/>

		<property 
			name="sortId"
			type="java.lang.String"
			update="true"
			insert="true"
			column="SORTID"
		/>

		<property
			name="applicationid"
			type="java.lang.String"
			update="true"
			insert="true"
			column="APPLICATIONID"
			/>
		
		<property
			name="roles"
			type="text"
			update="true"
			insert="true"
			column="ROLEIDS"
		/>
			
		<property
			name="roleNames"
			type="text"
			update="true"
			insert="true"
			column="ROLENAMES"
		/>
		
		<property 
			name="defineMode"
			type="java.lang.Integer" 
			update="true"
			insert="true"
			column="DEFINEMODE"
		/>
		
		<property 
			name="templateContext"
			type="text"
			update="true"
			insert="true"
			column="TEMPLATECONTEXT"
		/>
		
		<many-to-one 
			name="style"
			class="cn.myapps.core.style.repository.ejb.StyleRepositoryVO"
			cascade="none"
			outer-join="auto"
			update="true"
			insert="true"
			lazy="false"
			column="STYLE" 
		/>
		
		<set 
			name="reminders"
			lazy="false"
			inverse="true" 
			cascade="save-update"
			order-by = "id" >
			<key column="HOMEPAGE"/>
			<one-to-many class="cn.myapps.core.homepage.ejb.Reminder" />
		</set>
	<!-- 
		<set 
			name="reminders"
			lazy="false"
			inverse="true" 
			cascade="save-update"
			order-by = "id" >
			<key column="HOMEPAGE"/>
			<one-to-many class="cn.myapps.core.homepage.ejb.Reminder" />
		</set>
	 
		<set 
			name="summaryCfgs"
			lazy="false"
			inverse="true" 
			cascade="save-update"
			order-by = "id" >
			<key column="HOMEPAGE"/>
			<one-to-many class="cn.myapps.core.dynaform.summary.ejb.SummaryCfgVO" />
		</set>
-->	
		<!--
			To add non XDoclet property mappings, create a file named
			hibernate-properties-HomePage.xml
			containing the additional properties and place it in your merge dir.
		-->

	</class>

</hibernate-mapping>
