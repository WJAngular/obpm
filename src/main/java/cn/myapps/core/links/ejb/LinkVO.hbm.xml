<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
	>
	<class
		name="cn.myapps.core.links.ejb.LinkVO"
		table="T_LINK"
		>

		<id
			name="id"
			column="ID"
			type="java.lang.String"
			>
			<generator class="assigned">
				<!--  
						  To add non XDoclet generator parameters, create a file named 
						  hibernate-generator-params-Reminder.xml 
						  containing the additional parameters and place it in your merge dir. 
					  --> 
			</generator>
		</id>

		<property
			name="name"
			type="java.lang.String"
			update="true"
			insert="true"
			column="NAME"
			/>

		<property
			name="description"
			type="java.lang.String"
			update="true"
			insert="true"
			column="DESCRIPTION"
			/>
        
		<property
			name="type"
			type="java.lang.String"
			update="true"
			insert="true"
			column="TYPE"
			/>
		<property
			name="applicationid"
			type="java.lang.String"
			update="true"
			insert="true"
			column="APPLICATIONID"
			/>
			
		<property
			name="moduleid"
			type="java.lang.String"
			update="true"
			insert="true"
			column="MODULEID"
		/>

		<property
			name="actionContent"
			type="java.lang.String"
			length="2000"
			update="true"
			insert="true"
			column="ACTIONCONTENT"
			/>
			
		<property
			name="queryString"
			type="text"
			update="true"
			insert="true"
			column="QUERYSTRING"
			/>

		<property
			name="directory"
			type="java.lang.String"
			update="true"
			insert="true"
			column="DIRECTORY"
			/>

		<property
			name="sortId"
			type="java.lang.String"
			update="true"
			insert="true"
			column="SORTID"
			/>

		
		<!--
				To add non XDoclet property mappings, create a file named
					hibernate-properties-Reminder.xml
				containing the additional properties and place it in your merge dir.
			-->

	</class>

</hibernate-mapping>
