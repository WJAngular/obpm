<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="validate_repository" extends="myapps-default"
		namespace="/core/validate/repository">
		<action name="new"
			class="cn.myapps.core.validate.repository.action.ValidateRepositoryAction"
			method="doNew">
			<result name="success" type="dispatcher">
				content.jsp
			</result>
			<interceptor-ref name="params" />
		</action>
		<action name="edit"
			class="cn.myapps.core.validate.repository.action.ValidateRepositoryAction"
			method="doEdit">
			<result name="success" type="dispatcher">
				content.jsp
			</result>
			<interceptor-ref name="params" />
		</action>
		<action name="save"
			class="cn.myapps.core.validate.repository.action.ValidateRepositoryAction"
			method="doSave">
			<result name="success" type="dispatcher">
				content.jsp
			</result>
			<result name="input" type="dispatcher">content.jsp</result>
			<interceptor-ref name="validationWorkflowStack" />
			<interceptor-ref name="params" />
		</action>
		<action name="delete"
			class="cn.myapps.core.validate.repository.action.ValidateRepositoryAction"
			method="doDelete">
			<interceptor-ref name="params" />
			<interceptor-ref name="basicStack" />
			<result name="success" type="chain">list</result>
			<result name="input" type="chain">list</result>
		</action>
		<action name="list"
			class="cn.myapps.core.validate.repository.action.ValidateRepositoryAction"
			method="doList">
			<interceptor-ref name="chain" />
			<interceptor-ref name="basicStack" />
			<result name="success" type="dispatcher">list.jsp</result>
			<interceptor-ref name="params" />
			<interceptor-ref name="prepare" />
		</action>
	</package>


</struts>